<% if obj.errors.any? %>
	<div class="row">
		<div class="col s12 m12">
			<div class="card-panel red darken-4">
				<div class="row">
					<div class="col l6 white-text">
						<h5>
							<%= pluralize(obj.errors.count, "error") %>
							prohibited this article from being saved:
						</h5>
					</div>
					<div class="col l6 right">
						<ul>
							<% obj.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>

