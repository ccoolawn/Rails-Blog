
<section class="section--center mdl-grid site-max-width">

	<div class="container">
		<div class="row">
		  <div class="col s12">
		    <p>
					<%= button_tag( class:"btn waves-effect purple white-text" ) do %>
							<%= link_to "Create New Article", new_article_path %><i class="material-icons right">open_in_new</i>
					<% end %>
				</p>
		  </div>
		</div>
	</div>
	<% @articles.each do |article| %>
	<div class="mdl-cell mdl-card mdl-shadow--4dp portfolio-card">
		<div class="mdl-card__media">
			<img class="article-image" src="img/portfolio1.jpg" border="0" alt="">
		</div>
		<div class="mdl-card__title">
			<h2 class="mdl-card__title-text"><%= article.title %></h2>
		</div>
		<div class="mdl-card__supporting-text"><%= article.description %>
		</div>
		<div class="mdl-card__actions mdl-card--border">
	    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      <%= link_to "Edit", edit_article_path(article) %>
	    </a>
	    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      <%= link_to "Show", article_path(article) %>
	    </a>
	  </div>
	</div>
	<% end %>
</section>

